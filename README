My blog.

# With virtualenv

    $ cd author
    $ virtualenv .
    $ ./bin/pip install -r requirements.txt

# Configure

    $ export APP_SETTINGS=/path/to/settings

# Create database

    $ ./bin/python
    >> from app import data
    >> data.init_db()

# Import posts

    $ ./bin/python
    >> from app import importer
    >> importer.import_posts('/path/to/posts')

# Run the webserver

    ./bin/python runserver.py
